{% extends '/base.html.twig' %}

{% block title %}Nos vols{% endblock %}

{% block body %}
    <header class="bg-cover bg-center h-96" style="background-image: url('{{ asset('images/reserve_now.jpg') }}');">
        <div class="flex justify-center items-center h-full bg-black bg-opacity-50">
            <h1 class="text-5xl font-extrabold text-white">Nos vols spatiaux</h1>
        </div>
    </header>

    <div class="container mx-auto mt-8">
        <h2 class="text-3xl font-bold mb-6">Réservez votre vol spatial dès aujourd'hui !</h2>

        <div class="grid grid-cols-3 gap-8">
            {% for flight in flights %}
                <div class="bg-white shadow-md rounded-lg p-6">
                    <img src="{{ flight.image }}" alt="Vol spatial" class="w-full h-48 object-cover rounded-lg">
                    <h3 class="text-xl font-semibold mt-4">{{ flight.destination }}</h3>
                    <p class="mt-2 text-gray-700">Date : {{ flight.date|date("d M Y") }}</p>
                    <p class="mt-2 text-gray-700">Prix : {{ flight.seatPrice }} €</p>
                    <p class="mt-2 text-gray-700">Places disponibles : {{ flight|length }}</p>
                    <a href="{{ path("page_flight_show", {'id':flight.id}) }}"
                       class="inline-block mt-4 bg-[#002EFF] text-white px-6 py-2 rounded hover:bg-[#1E2A38]">Réserver
                        maintenant</a>
                </div>
            {% endfor %}
        </div>
    </div>
{% endblock %}
