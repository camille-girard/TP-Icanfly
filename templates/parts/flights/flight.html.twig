                <a href="#" class="inline-block mt-4 bg-[#002EFF] text-white px-6 py-2 rounded hover:bg-[#1E2A38]">Réserver maintenant</a>
            </div>

            <!-- Vol 3 -->
            <div class="bg-white shadow-md rounded-lg p-6">
                <img src="{{ asset('images/reserve_now.jpg') }}" alt="Vol spatial" class="w-full h-48 object-cover rounded-lg">
