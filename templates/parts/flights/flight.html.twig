        <!-- Cartes des vols -->
        <div class="grid grid-cols-3 gap-8">
            <!-- Vol 1 -->
            <div class="bg-white shadow-md rounded-lg p-6">
                <img src="{{ asset('images/reserve_now.jpg') }}" alt="Vol spatial" class="w-full h-48 object-cover rounded-lg">
                <h3 class="text-xl font-semibold mt-4">Vol vers Mars</h3>
                <p class="mt-2 text-gray-700">Date : 2025-06-15</p>
                <p class="mt-2 text-gray-700">Prix : 100,000€</p>
                <p class="mt-2 text-gray-700">Places disponibles : 50</p>
                <a href="#" class="inline-block mt-4 bg-[#002EFF] text-white px-6 py-2 rounded hover:bg-[#1E2A38]">Réserver maintenant</a>
            </div>

            <!-- Vol 2 -->
            <div class="bg-white shadow-md rounded-lg p-6">
                <img src="{{ asset('images/reserve_now.jpg') }}" alt="Vol spatial" class="w-full h-48 object-cover rounded-lg">
                <h3 class="text-xl font-semibold mt-4">Vol sur la Lune</h3>
                <p class="mt-2 text-gray-700">Date : 2025-08-01</p>
                <p class="mt-2 text-gray-700">Prix : 50,000€</p>
