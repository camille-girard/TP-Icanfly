{% extends 'base.html.twig' %}

{% block title %}Réinitialiser votre mot de passe{% endblock %}

{% block body %}
    <div class="relative min-h-screen overflow-hidden p-4 w-full">
        <div class="absolute inset-0 z-0"
             style="background-image: url('https://images4.alphacoders.com/106/thumb-1920-106826.jpg');
                    background-size: cover;
                    background-position: center;
                    filter: blur(8px);
                    transform: scale(1.1);">
        </div>
        <div class="absolute inset-0 bg-black opacity-30 z-1"></div>
        <div class="relative min-h-screen flex items-center justify-center p-4 z-10">
            <div class="w-full max-w-md space-y-8 bg-white p-8 rounded-lg shadow-xl">
                <h1 class="text-2xl font-bold text-center text-gray-900 mb-8">Réinitialiser votre mot de passe</h1>

                {{ form_start(resetForm, {'attr': {'class': 'space-y-6'}}) }}
                    <div class="space-y-2">
                        {{ form_label(resetForm.plainPassword, 'Nouveau mot de passe', {'label_attr': {'class': 'block text-sm font-medium text-gray-700'}}) }}
                        {{ form_widget(resetForm.plainPassword, {'attr': {'class': 'w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-2 focus:ring-[#002EFF] focus:border-transparent'}}) }}
                    </div>
                    <button type="submit" class="w-full py-3 px-4 bg-[#002EFF] hover:bg-blue-600 text-white font-medium rounded-md shadow-sm transition-colors duration-200">
                        Réinitialiser le mot de passe
                    </button>
                {{ form_end(resetForm) }}
            </div>
        </div>
    </div>
{% endblock %}
