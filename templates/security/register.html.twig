{% extends 'base.html.twig' %}

{% block title %}S'inscrire{% endblock %}

{% block body %}
    <div class="relative min-h-screen overflow-hidden p-4 w-full">
        <div class="absolute inset-0 z-0"
             style="background-image: url('https://images4.alphacoders.com/106/thumb-1920-106826.jpg');
                    background-size: cover;
                    background-position: center;
                    filter: blur(8px);
                    transform: scale(1.1);">
        </div>
        <div class="absolute inset-0 bg-black opacity-30 z-1"></div>
        <div class="relative min-h-screen flex items-center justify-center p-4 z-10">
            <div class="w-full max-w-md space-y-8 bg-white p-8 rounded-lg shadow-xl">
                {% for flash_error in app.flashes('verify_email_error') %}
                    <div class="flex items-center p-4 mb-4 text-red-800 bg-red-50 rounded-lg">
                        <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                                  d="M12 8v4m0 4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"></path>
                        </svg>
                        <span class="text-sm">{{ flash_error }}</span>
                    </div>
                {% endfor %}
                <h1 class="text-2xl font-bold text-center text-gray-900 mb-8">S'inscrire</h1>

                {{ form_errors(registrationForm) }}

                {{ form_start(registrationForm, {'attr': {'class': 'space-y-6'}}) }}
                    <div class="space-y-2">
                        {{ form_label(registrationForm.name, 'Nom', {'label_attr': {'class': 'block text-sm font-medium text-gray-700'}}) }}
                        {{ form_widget(registrationForm.name, {'attr': {'class': 'w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-2 focus:ring-[#002EFF] focus:border-transparent'}}) }}
                    </div>
                    <div class="space-y-2">
                        {{ form_label(registrationForm.email, 'Email', {'label_attr': {'class': 'block text-sm font-medium text-gray-700'}}) }}
                        {{ form_widget(registrationForm.email, {'attr': {'class': 'w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-2 focus:ring-[#002EFF] focus:border-transparent'}}) }}
                    </div>
                    <div class="space-y-2">
                        {{ form_label(registrationForm.plainPassword, 'Mot de passe', {'label_attr': {'class': 'block text-sm font-medium text-gray-700'}}) }}
                        {{ form_widget(registrationForm.plainPassword, {'attr': {'class': 'w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-2 focus:ring-[#002EFF] focus:border-transparent'}}) }}
                    </div>
                    <div class="flex items-center space-x-2">
                        {{ form_label(registrationForm.agreeTerms, 'Accepter les termes', {'label_attr': {'class': 'text-sm font-medium text-gray-700'}}) }}
                        {{ form_widget(registrationForm.agreeTerms, {'attr': {'class': 'px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-2 focus:ring-[#002EFF] focus:border-transparent'}}) }}
                    </div>
                    <div>
                        <small class="text-gray-600">
                            En cliquant sur le bouton "S'inscrire", vous acceptez nos <a href="#" class="text-blue-500 hover:underline">conditions d'utilisation</a> et notre <a href="#" class="text-blue-500 hover:underline">politique de confidentialit√©</a>.
                        </small>
                    </div>

                    <button type="submit" class="w-full py-3 px-4 bg-[#002EFF] hover:bg-blue-600 text-white font-medium rounded-md shadow-sm transition-colors duration-200">
                        S'inscrire
                    </button>
                {{ form_end(registrationForm) }}
            </div>
        </div>
    </div>
{% endblock %}
