<form method="post"
      action="{{ path(admin_mode ? 'admin_reservations_delete' : 'dashboard_reservations_delete', {'id': booking.id}) }}"
      onsubmit="return confirm('Êtes-vous sûr de vouloir supprimer cette réservation ?');">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ booking.id) }}">
    <button class="px-3 py-1 text-red-500 border border-red-500 rounded-md hover:bg-red-500 hover:text-white transition-colors">
        Supprimer
    </button>
</form>
