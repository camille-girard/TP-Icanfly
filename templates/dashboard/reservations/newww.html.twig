{% extends 'dashboard.html.twig' %}

{% block title %}Nouvelle Réservation{% endblock %}

{% block content %}
    <div class="container mx-auto px-4 py-6 min-h-screen">
        <h1 class="text-3xl font-bold text-[#1E2A38] mb-6">Créer une Nouvelle Réservation</h1>

        <div class="bg-white shadow-md rounded-lg p-6">
            {{ form_start(form, {'attr': {'novalidate': 'novalidate'}, 'render_rest': false}) }}
            <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
                {{ form_widget(form) }}
            </div>
            {{ form_end(form) }}
        </div>

        <div class="mt-6">
            <a href="{{ path('dashboard_reservations') }}" class="text-[#002EFF] hover:underline">&larr; Retour à la liste</a>
        </div>
    </div>
{% endblock %}
