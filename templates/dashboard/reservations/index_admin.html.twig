{% extends 'dashboard.html.twig' %}

{% block title %}Tableau de bord - Réservations{% endblock %}

{% block content %}
    <div class="container mx-auto px-4 py-6 min-h-screen">
        <h1 class="text-3xl font-bold text-[#1E2A38] mb-6">Gestion des Réservations</h1>

        <div class="overflow-x-auto bg-white shadow-md rounded-lg">
            <table class="table-auto w-full text-left border-collapse">
                <thead class="bg-[#1E2A38] text-white">
                <tr>
                    <th class="px-4 py-2">ID</th>
                    <th class="px-4 py-2">Destination</th>
                    <th class="px-4 py-2">Nombre de places</th>
                    <th class="px-4 py-2">Prix total (€)</th>
                    <th class="px-4 py-2">Statut</th>
                    <th class="px-4 py-2">Client</th>
                    <th class="px-4 py-2">Mission</th>
                    <th class="px-4 py-2">Date de réservation</th>
                    <th class="px-4 py-2">Actions</th>
                </tr>
                </thead>
                <tbody class="text-[#1E2A38]">
                {% for booking in bookings %}
                    <tr class="border-t border-[#F5F7F1] hover:bg-[#002EFF1A]">
                        <td class="px-4 py-2">{{ booking.id }}</td>
                        <td class="px-4 py-2">{{ booking.destination }}</td>
                        <td class="px-4 py-2">{{ booking.seatCount }}</td>
                        <td class="px-4 py-2">{{ booking.totalPrice }}</td>
                        <td class="px-4 py-2">{{ booking.status.value }}</td>
                        <td class="px-4 py-2">{{ booking.customer.email }}</td>
                        <td class="px-4 py-2">
                            {% if booking.mission is not null %}
                                {{ booking.mission.destination }}
                            {% else %}
                                <span class="text-gray-500 italic">Nom indisponible</span>
                            {% endif %}
                        </td>
                        <td class="px-4 py-2">{{ booking.createdAt|date('d/m/Y H:i') }}</td>
                        <td class="px-4 py-2">
                            <div class="flex gap-3">
                                <a href="{{ path('admin_reservations_show', {'id': booking.id}) }}"
                                   class="px-3 py-1 text-gray-700 border border-gray-400 rounded-md hover:bg-gray-400 hover:text-white transition-colors">
                                    Voir
                                </a>
                                <a href="{{ path('admin_reservations_edit', {'id': booking.id}) }}"
                                   class="px-3 py-1 text-[#0022FF] border border-[#0022FF] rounded-md hover:bg-[#0022FF] hover:text-white transition-colors">
                                    Modifier
                                </a>
                                <form method="post" action="{{ path('admin_reservations_delete', {'id': booking.id}) }}" style="display:inline-block;" onsubmit="return confirm('Êtes-vous sûr de vouloir supprimer cette réservation ?');">
                                    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ booking.id) }}">
                                    <button type="submit"
                                            class="px-3 py-1 text-red-500 border border-red-500 rounded-md hover:bg-red-500 hover:text-white transition-colors">
                                        Supprimer
                                    </button>
                                </form>
                            </div>
                        </td>
                    </tr>
                {% else %}
                    <tr>
                        <td colspan="9" class="px-4 py-6 text-center text-gray-500">Aucune réservation trouvée.</td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>
        </div>

        <div class="mt-6 text-right">
            <a href="{{ path('admin_reservations_new') }}"
               class="bg-[#002EFF] text-white px-4 py-2 rounded hover:bg-[#001FCC]">
                Ajouter une Réservation
            </a>
        </div>
    </div>
{% endblock %}
