{% extends 'dashboard.html.twig' %}

{% block title %}Modifier la Réservation{% endblock %}

{% block content %}
    <div class="container mx-auto px-4 py-6 min-h-screen">
        <h1 class="text-3xl font-bold text-[#1E2A38] mb-6">Modifier la Réservation</h1>

        <div class="bg-white shadow-md rounded-lg p-6">
            {{ form_start(form, {'attr': {'novalidate': 'novalidate'}, 'render_rest': false}) }}
            <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
                <div>
                    {{ form_label(form.destination, null, {'label_attr': {'class': 'block text-sm font-medium text-gray-700'}}) }}
                    {{ form_widget(form.destination, {'attr': {'class': 'mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:ring-yellow-500 focus:border-yellow-500'}}) }}
                </div>
                <div>
                    {{ form_label(form.seatCount, null, {'label_attr': {'class': 'block text-sm font-medium text-gray-700'}}) }}
                    {{ form_widget(form.seatCount, {'attr': {'class': 'mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:ring-yellow-500 focus:border-yellow-500'}}) }}
                </div>
                <div>
                    {{ form_label(form.totalPrice, null, {'label_attr': {'class': 'block text-sm font-medium text-gray-700'}}) }}
                    {{ form_widget(form.totalPrice, {'attr': {'class': 'mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:ring-yellow-500 focus:border-yellow-500'}}) }}
                </div>
                <div>
                    {{ form_label(form.status, null, {'label_attr': {'class': 'block text-sm font-medium text-gray-700'}}) }}
                    {{ form_widget(form.status, {'attr': {'class': 'mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:ring-yellow-500 focus:border-yellow-500'}}) }}
                </div>
                <div>
                    {{ form_label(form.customer, null, {'label_attr': {'class': 'block text-sm font-medium text-gray-700'}}) }}
                    {{ form_widget(form.customer, {'attr': {'class': 'mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:ring-yellow-500 focus:border-yellow-500'}}) }}
                </div>
                <div>
                    {{ form_label(form.mission, null, {'label_attr': {'class': 'block text-sm font-medium text-gray-700'}}) }}
                    {{ form_widget(form.mission, {'attr': {'class': 'mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:ring-yellow-500 focus:border-yellow-500'}}) }}
                </div>
            </div>
            {{ form_end(form) }}
        </div>
        <div class="flex justify-between mt-6">
            {% include 'dashboard/reservations/_delete_form.html.twig' with { 'reservation': booking } %}
        </div>
        <div class="mt-6">
            <a href="{{ path('dashboard_reservations_admin') }}" class="text-[#002EFF] hover:underline">&larr; Retour à la liste</a>
        </div>
    </div>
{% endblock %}
