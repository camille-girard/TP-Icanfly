{% extends 'dashboard.html.twig' %}

{% block title %}Détail de la Réservation{% endblock %}

{% block content %}
    <div class="container mx-auto mt-8">
        <h1 class="text-3xl font-bold mb-6">Détail de la Réservation</h1>

        <ul class="list-disc pl-6">
            <li><strong>ID :</strong> {{ booking.id }}</li>
            <li><strong>Destination :</strong> {{ booking.destination }}</li>
            <li><strong>Nombre de places :</strong> {{ booking.seatCount }}</li>
            <li><strong>Prix total :</strong> {{ booking.totalPrice }} €</li>
            <li><strong>Statut :</strong> {{ booking.status.value }}</li>
            <li><strong>Client :</strong> {{ booking.customer.email }}</li>
            <li><strong>Mission :</strong> {{ booking.mission.name }}</li>
        </ul>

        <a href="{{ path('dashboard_reservations_admin') }}" class="mt-4 inline-block bg-gray-500 text-white px-4 py-2 rounded hover:bg-gray-600">Retour</a>
    </div>
{% endblock %}
