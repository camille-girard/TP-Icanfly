{% extends 'dashboard.html.twig' %}

{% block title %}Utilisateur{% endblock %}

{% block content %}
    <div class="px-6 py-8 bg-[#F5F7FA] min-h-screen">
        <h1 class="text-3xl font-bold text-[#1E2A38] mb-8">Détails de l'utilisateur</h1>

        <div class="overflow-x-auto bg-white shadow-md rounded-lg">
            <table class="table-auto w-full text-left border-collapse">
                <thead class="bg-[#1E2A38] text-white">
                <tr>
                    <th class="px-4 py-2">Champ</th>
                    <th class="px-4 py-2">Valeur</th>
                </tr>
                </thead>
                <tbody class="text-[#1E2A38]">
                <tr class="border-t border-[#F5F7F1] hover:bg-[#002EFF1A]">
                    <td class="px-4 py-2 font-bold">Prénom</td>
                    <td class="px-4 py-2">{{ user.firstName }}</td>
                </tr>
                <tr class="border-t border-[#F5F7F1] hover:bg-[#002EFF1A]">
                    <td class="px-4 py-2 font-bold">Nom</td>
                    <td class="px-4 py-2">{{ user.lastName }}</td>
                </tr>
                <tr class="border-t border-[#F5F7F1] hover:bg-[#002EFF1A]">
                    <td class="px-4 py-2 font-bold">Email</td>
                    <td class="px-4 py-2">{{ user.email }}</td>
                </tr>
                <tr class="border-t border-[#F5F7F1] hover:bg-[#002EFF1A]">
                    <td class="px-4 py-2 font-bold">Mot de passe</td>
                    <td class="px-4 py-2">{{ user.password }}</td>
                </tr>
                <tr class="border-t border-[#F5F7F1] hover:bg-[#002EFF1A]">
                    <td class="px-4 py-2 font-bold">Créé le</td>
                    <td class="px-4 py-2">{{ user.createdAt ? user.createdAt|date('Y-m-d H:i:s') : '' }}</td>
                </tr>
                <tr class="border-t border-[#F5F7F1] hover:bg-[#002EFF1A]">
                    <td class="px-4 py-2 font-bold">Rôle</td>
                    <td class="px-4 py-2">{{ user.roles ? user.roles|json_encode : '' }}</td>
                </tr>
                <tr class="border-t border-[#F5F7F1] hover:bg-[#002EFF1A]">
                    <td class="px-4 py-2 font-bold">Vérifié</td>
                    <td class="px-4 py-2">
                        <span class="px-2 py-1 rounded-full text-sm {% if user.isVerified %}bg-green-100 text-green-800{% else %}bg-red-100 text-red-800{% endif %}">
                            {{ user.isVerified ? 'Oui' : 'Non' }}
                        </span>
                    </td>
                </tr>
                </tbody>
            </table>
        </div>

        <div class="mt-6 mb-6 ml-4 flex justify-between">
            <div class="flex gap-3">
                <a href="{{ path('app_user_edit', {'id': user.id}) }}"
                   class="px-3 py-1 text-[#0022FF] border border-[#0022FF] rounded-md hover:bg-[#0022FF] hover:text-white transition-colors">
                    Modifier
                </a>
                {{ include('dashboard/user/_delete_form.html.twig') }}
            </div>
        </div>
        <div class="mt-6">
            <a href="{{ path('app_user_index') }}" class="text-[#002EFF] hover:underline">&larr; Retour à la liste</a>
        </div>
    </div>
{% endblock %}
