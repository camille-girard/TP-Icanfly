{% extends 'dashboard.html.twig' %}

{% block title %}Tableau de bord - Missions{% endblock %}

{% block content %}
    <div class="container mx-auto px-4 py-6 min-h-screen">
        <h1 class="text-3xl font-bold text-[#1E2A38] mb-6">Gestion des Missions</h1>

        <div class="overflow-x-auto bg-white shadow-md rounded-lg">
            <table class="table-auto w-full text-left border-collapse">
                <thead class="bg-[#1E2A38] text-white">
                <tr>
                    <th class="px-4 py-2">ID</th>
                    <th class="px-4 py-2">Destination</th>
                    <th class="px-4 py-2">Description</th>
                    <th class="px-4 py-2">Date</th>
                    <th class="px-4 py-2">Prix par place (€)</th>
                    <th class="px-4 py-2">Durée</th>
                    <th class="px-4 py-2">Créé le</th>
                    <th class="px-4 py-2">Actions</th>
                </tr>
                </thead>
                <tbody class="text-[#1E2A38]">
                {% for mission in missions %}
                    <tr class="border-t border-[#F5F7F1] hover:bg-[#002EFF1A]">
                        <td class="px-4 py-2">{{ mission.id }}</td>
                        <td class="px-4 py-2">{{ mission.destination }}</td>
                        <td class="px-4 py-2">{{ mission.description }}</td>
                        <td class="px-4 py-2">{{ mission.date ? mission.date|date('d/m/Y H:i') : '<span class="text-gray-500 italic">Non défini</span>' }}</td>
                        <td class="px-4 py-2">{{ mission.seatPrice }}</td>
                        <td class="px-4 py-2">{{ mission.duration ? mission.duration|date('H:i') : '<span class="text-gray-500 italic">Non défini</span>' }}</td>
                        <td class="px-4 py-2">{{ mission.createdAt ? mission.createdAt|date('d/m/Y H:i') : '<span class="text-gray-500 italic">Non défini</span>' }}</td>
                        <td class="px-4 py-2">
                            <a href="{{ path('dashboard_mission_show', {'id': mission.id}) }}" class="text-[#002EFF] hover:underline">Voir</a>
                            <a href="{{ path('dashboard_mission_edit', {'id': mission.id}) }}" class="ml-2 text-[#002EFF] hover:underline">Modifier</a>
                        </td>
                    </tr>
                {% else %}
                    <tr>
                        <td colspan="9" class="px-4 py-6 text-center text-gray-500">Aucune mission trouvée.</td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>
        </div>

        <div class="mt-6 text-right">
            <a href="{{ path('dashboard_mission_new') }}"
               class="bg-[#002EFF] text-white px-4 py-2 rounded hover:bg-[#001FCC]">
                Ajouter une Mission
            </a>
        </div>
    </div>
{% endblock %}
