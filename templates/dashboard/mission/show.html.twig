{% extends 'dashboard.html.twig' %}

{% block title %}Mission{% endblock %}

{% block content %}
    <div class="container mx-auto px-4 py-6 min-h-screen">
        <h1 class="text-3xl font-bold text-[#1E2A38] mb-6">Détails de la Mission</h1>

        <div class="bg-white shadow-md rounded-lg p-6">
            <div class="flex flex-col md:flex-row items-center">
                <div class="md:w-1/3 mb-4 md:mb-0">
                    <img src="{{ mission.image }}" alt="Image de la mission" class="w-full rounded-lg shadow-md">
                </div>

                <div class="md:w-2/3 md:ml-6">
                    <div class="grid grid-cols-2 gap-4">
                        <div>
                            <h2 class="text-lg font-medium text-[#1E2A38]">ID</h2>
                            <p class="text-gray-600">{{ mission.id }}</p>
                        </div>
                        <div>
                            <h2 class="text-lg font-medium text-[#1E2A38]">Destination</h2>
                            <p class="text-gray-600">{{ mission.destination }}</p>
                        </div>
                        <div>
                            <h2 class="text-lg font-medium text-[#1E2A38]">Description</h2>
                            <p class="text-gray-600">{{ mission.description }}</p>
                        </div>
                        <div>
                            <h2 class="text-lg font-medium text-[#1E2A38]">Date</h2>
                            <p class="text-gray-600">{{ mission.date ? mission.date|date('Y-m-d H:i:s') : 'N/A' }}</p>
                        </div>
                        <div>
                            <h2 class="text-lg font-medium text-[#1E2A38]">Prix par place (€)</h2>
                            <p class="text-gray-600">{{ mission.seatPrice }}</p>
                        </div>
                        <div>
                            <h2 class="text-lg font-medium text-[#1E2A38]">Durée</h2>
                            <p class="text-gray-600">{{ mission.duration ? mission.duration|date('H:i:s') : 'N/A' }}</p>
                        </div>
                        <div>
                            <h2 class="text-lg font-medium text-[#1E2A38]">Créé le</h2>
                            <p class="text-gray-600">{{ mission.createdAt ? mission.createdAt|date('Y-m-d H:i:s') : 'N/A' }}</p>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="mt-6 flex space-x-4">
            <a href="{{ path('dashboard_mission_index') }}" class="text-[#002EFF] hover:underline">&larr; Retour à la liste</a>
            <a href="{{ path('dashboard_mission_edit', {'id': mission.id}) }}" class="text-[#002EFF] hover:underline">Modifier</a>
        </div>

        <div class="flex justify-start mt-6">
            {{ include('dashboard/mission/_delete_form.html.twig') }}
        </div>
    </div>
{% endblock %}
