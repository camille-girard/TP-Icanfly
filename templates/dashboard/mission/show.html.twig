{% extends 'dashboard.html.twig' %}

{% block title %}Mission{% endblock %}

{% block content %}
    <h1>Mission</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ mission.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ mission.name }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ mission.description }}</td>
            </tr>
            <tr>
                <th>Destination</th>
                <td>{{ mission.destination }}</td>
            </tr>
            <tr>
                <th>LaunchDate</th>
                <td>{{ mission.launchDate ? mission.launchDate|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>SeatPrice</th>
                <td>{{ mission.seatPrice }}</td>
            </tr>
            <tr>
                <th>Duration</th>
                <td>{{ mission.duration }}</td>
            </tr>
            <tr>
                <th>CreatedAt</th>
                <td>{{ mission.createdAt ? mission.createdAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>Status</th>
                <td>{{ mission.status }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('dashboard_mission_index') }}">back to list</a>

    <a href="{{ path('dashboard_mission_edit', {'id': mission.id}) }}">edit</a>

    {{ include('dashboard/mission/_delete_form.html.twig') }}
{% endblock %}
