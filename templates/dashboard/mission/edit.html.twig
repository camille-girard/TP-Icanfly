{% extends 'dashboard.html.twig' %}

{% block title %}Modifier la Mission{% endblock %}

{% block content %}
    <div class="container mx-auto px-4 py-6 min-h-screen">
        <h1 class="text-3xl font-bold text-[#1E2A38] mb-6">Modifier la Mission</h1>

        <div class="bg-white shadow-md rounded-lg p-6">
            {{ form_start(form, { 'attr': { 'class': 'space-y-4' } }) }}

            <div class="grid grid-cols-2 gap-6">
                {% for field in form %}
                    {% if field.vars.name != '_token' %}
                        <div>
                            {{ form_label(field, null, { 'label_attr': { 'class': 'block text-sm font-medium text-[#1E2A38]' } }) }}
                            {{ form_widget(field, { 'attr': { 'class': 'mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:ring-[#002EFF] focus:border-[#002EFF]' } }) }}

                            {% if field.vars.errors|length > 0 %}
                                <p class="text-red-600 text-sm mt-1">{{ field.vars.errors|first.message }}</p>
                            {% endif %}
                        </div>
                    {% endif %}
                {% endfor %}
            </div>


            <div class="flex justify-end mt-6">
                <button type="submit"
                        class="bg-[#002EFF] text-white px-4 py-2 rounded hover:bg-[#001FCC]">
                    {{ button_label|default('Enregistrer') }}
                </button>
            </div>

            {{ form_end(form) }}
        </div>

        <div class="mt-6">
            <a href="{{ path('dashboard_mission_index') }}"
               class="text-[#002EFF] hover:underline">&larr; Retour Ã  la liste</a>
        </div>

        <div class="flex justify-start mt-6">
            {{ include('dashboard/mission/_delete_form.html.twig') }}
        </div>
    </div>
{% endblock %}
{% block javascripts %}
    <script>
        document.addEventListener('DOMContentLoaded', function () {
            const typeField = document.querySelector('select[name="type"]');
            const scientificFields = document.querySelectorAll('.scientific-fields');
            const travelFields = document.querySelectorAll('.travel-fields');

            function toggleFields() {
                const type = typeField.value;
                scientificFields.forEach(field => field.style.display = (type === 'scientific') ? 'block' : 'none');
                travelFields.forEach(field => field.style.display = (type === 'travel') ? 'block' : 'none');
            }

            typeField.addEventListener('change', toggleFields);
            toggleFields(); // Call on initial load
        });
    </script>
{% endblock %}
