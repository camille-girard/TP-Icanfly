{% extends 'dashboard.html.twig' %}

{% block title %}Modifier un Live{% endblock %}

{% block content %}
    <div class="container mx-auto px-4 py-6 min-h-screen">
        <h1 class="text-3xl font-bold text-[#1E2A38] mb-6">Modifier un Live</h1>

        <div class="bg-white shadow-md rounded-lg p-6">
            {{ form_start(form, {'attr': {'novalidate': 'novalidate', 'id': 'live-form'}}) }}
            <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
                <div class="md:col-span-2">
                    {{ form_label(form.url, null, {'label_attr': {'class': 'block text-sm font-medium text-gray-700'}}) }}
                    {{ form_widget(form.url, {'attr': {'class': 'w-full p-2 border border-gray-300 rounded-md'}}) }}
                </div>
                <div>
                    {{ form_label(form.startDate, null, {'label_attr': {'class': 'block text-sm font-medium text-gray-700'}}) }}
                    {{ form_widget(form.startDate, {'attr': {'class': 'w-full p-2 border border-gray-300 rounded-md'}}) }}
                </div>
                <div>
                    {{ form_label(form.endDate, null, {'label_attr': {'class': 'block text-sm font-medium text-gray-700'}}) }}
                    {{ form_widget(form.endDate, {'attr': {'class': 'w-full p-2 border border-gray-300 rounded-md'}}) }}
                </div>
                <div>
                    {{ form_label(form.mission, null, {'label_attr': {'class': 'block text-sm font-medium text-gray-700'}}) }}
                    {{ form_widget(form.mission, {'attr': {'class': 'w-full p-2 border border-gray-300 rounded-md'}}) }}
                </div>
            </div>
            {{ form_end(form) }}
        </div>
        <div class="mt-6 mb-6 flex gap-3">
            {% include 'dashboard/live/_delete_form.html.twig' with { 'video_streaming': form.vars.value } %}
        </div>

        <div class="mt-6">
            <a href="{{ path('dashboard_lives_index') }}"
               class="text-[#002EFF] hover:underline">&larr; Retour Ã  la liste</a>
        </div>
    </div>
{% endblock %}
