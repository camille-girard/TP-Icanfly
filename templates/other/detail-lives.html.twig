{% extends 'base.html.twig' %}

{% block title %}Live: {{ video_streaming.mission.destination }}{% endblock %}

{% block body %}
    <div class="relative h-screen bg-cover bg-center flex items-center justify-center"
         style="background-image: url('{{ asset('images/milky_way.jpg') }}');">
        <div class="absolute inset-0 bg-black bg-opacity-50"></div>

        <div class="relative w-full max-w-4xl bg-white shadow-lg rounded-lg p-8">
            <!-- Titre -->
            <h1 class="text-3xl font-extrabold text-[#1E2A38] mb-4">
                Diffusion en direct: {{ video_streaming.mission.destination }}
            </h1>
            <p class="text-gray-600 mb-6">
                Début: {{ video_streaming.startDate|date('d/m/Y H:i') }}
            </p>

            <!-- Vidéo -->
            <div class="flex justify-center mb-6">
                <iframe width="800" height="450"
                        src="{{ video_url }}"
                        frameborder="0" allowfullscreen
                        class="rounded-lg shadow-md border border-gray-300">
                </iframe>
            </div>

            <!-- Description -->
            <div class="p-4 bg-gray-50 rounded-lg">
                <h2 class="text-xl font-semibold text-[#002EFF]">À propos de la mission</h2>
                <p class="text-gray-700 mt-2">
                    {{ video_streaming.mission.description }}
                </p>
            </div>

            <!-- Bouton retour -->
            <div class="mt-6 flex justify-center">
                <a href="{{ path('page_lives') }}"
                   class="bg-[#002EFF] text-white px-6 py-2 rounded-md hover:bg-[#001FCC] transition">
                    Retour aux Lives
                </a>
            </div>
        </div>
    </div>
{% endblock %}
